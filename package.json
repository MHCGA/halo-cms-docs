{
  "private": true,
  "type": "module",
  "name": "halo-cms-docs",
  "version": "1.0.0",
  "description": "Share tips related to Halo CMS.",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm run \"/:build$/\"",
    "dev": "pnpm run \"/:dev$/\"",
    "lint": "pnpm run \"/^lint:/\"",
    "lint:eslint": "oxlint --type-aware --fix && eslint --fix",
    "lint:style": "stylelint --fix \"**/*.{css,vue}\" \"docs/.vitepress/**/*.{css,vue}\" --ignore-path .gitignore",
    "lint:md": "markdownlint --fix \"**/*.md\" --ignore-path .gitignore",
    "lint:autocorrect": "autocorrect --fix",
    "format": "pnpm run \"/^format:/\"",
    "format:prettier": "prettier --write \"**/*.{json,jsonc,yaml,md,css,js,ts,vue,html}\"",
    "migrate:oxlint": "pnpm dlx @oxlint/migrate --type-aware --with-nursery && pnpm run format",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "pnpm run docs:build && vitepress preview docs"
  },
  "browserslist": [
    "defaults",
    "Safari >= 16.4",
    "Chrome >= 111",
    "Firefox >= 128"
  ],
  "keywords": [
    "halo"
  ],
  "author": "MHCGA",
  "homepage": "https://github.com/MHCGA",
  "repository": {
    "url": "https://github.com/MHCGA/halo-cms-docs",
    "type": "git"
  },
  "packageManager": "pnpm@10.26.1",
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.1",
    "@giscus/vue": "^3.1.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@nolebase/vitepress-plugin-highlight-targeted-heading": "^2.18.2",
    "@types/node": "^25.0.9",
    "@typescript-eslint/parser": "^8.53.1",
    "autocorrect-node": "^2.14.0",
    "browserslist": "^4.28.1",
    "cheerio": "^1.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-oxlint": "^1.40.0",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.0.0",
    "lightningcss": "^1.31.0",
    "markdownlint-cli": "^0.47.0",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "pagefind": "^1.4.0",
    "prettier": "^3.8.1",
    "stylelint": "^16.26.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.1",
    "typescript-eslint": "^8.53.0",
    "vitepress": "2.0.0-alpha.15",
    "vitepress-plugin-pagefind": "^0.4.18",
    "vitepress-plugin-rss": "^0.4.1",
    "vue": "^3.5.27",
    "vue-eslint-parser": "^10.2.0"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@^7.2.10"
  }
}